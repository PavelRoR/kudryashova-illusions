#mobForm
	padding 30px 0
	background-color: #E7D3BE
	display none
	@media screen and (max-width 560px)
		display block
.form-mobFor
	padding 40px 25px
	background-color #fff
	@media screen and (max-width 385px)
		padding 30px 20px
	.form-title
		font-size: 14px
		font-weight: 600
		text-transform uppercase
		margin-bottom: 50px
		@media screen and (max-width 385px)
			margin-bottom: 30px
.input-mail-mobFor
	background-color: transparent
	display block
	border: none;
	border-bottom: 1px solid #000000
	border-radius: 0;
	color: #000;;
	font-size: 14px;
	font-weight: normal;
	padding 10px 0
	transition: all .3s ease
	width 100%
	max-width: none
	margin 0 0 30px
.button-form-mobFor
	display block
	width 100%
	font-size: 18px
	@media screen and (max-width 385px)
		padding 10px 20px
		min-width 1px
		line-height: 1.3
.checking-mobFor
	max-width: none