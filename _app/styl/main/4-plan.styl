#plan
	padding 70px 0 80px
.lessons
	position relative
	border 1px solid #000
	width 100%
	// padding 50px 55px 80px
	&:before
		content: ''
		display block
		position: absolute;
		width: 64px
		height: 59px
		background-color: #D4AD85;
		background-image: linear-gradient(45deg,#d4ad85 49%,#000 50%,#fff 50%,#fff 100%)
		top -1px
		right -3px
	&-wrapper
		overflow hidden
.lesson
	padding 50px 55px 40px
	&-title
		font-size: 36px
		font-weight: 300
		color #D4AD85
		margin-bottom: 10px
	&-text
		font-size: 30px
	// &-marquee
	// 	overflow hidden
	// 	display block
	// 	width 100%
	// 	height: 1px
	&:last-of-type
		padding-bottom: 80px
.marquee-plan
	height: 1px
	background-image: url(../img/icons/plan-marquee.png)
	background-repeat: repeat-x
	width 1000%
	animation: marq;
	animation-duration: 70s;
	animation-direction: normal;
	animation-fill-mode: both;
	animation-iteration-count: infinite;
	animation-timing-function: linear;
@keyframes marq
	0%
		background-position: 100% 0
	50%
		background-position: 50% 0
	100%
		background-position: 0 0