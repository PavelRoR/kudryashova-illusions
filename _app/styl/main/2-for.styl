#for
	padding 40px 0 120px
	.row:last-of-type
		margin-top: 180px
	.col-md-6
		position relative
.for
	&-img
		width 90%
		margin-top: 180px
		&-1
			max-width 597px
		&-2
			max-width 681px
	&-subtitle
		font-size: 40px
		font-weight: 300
		position absolute
		top -10px
		left 0
	&-list
		li
			list-style none
			position relative
			font-size: 30px
			margin-bottom: 50px
			padding-left: 40px
			transition: all .3s ease
			&:last-child
				margin-bottom: 0
			&:before
				content: ''
				display block
				position absolute
				top 17px
				left 0
				width: 17px;
				height: 17px;
				background-color: #E3CDB5
				border-radius: 50px
			&:hover
				color #E7D3BE