#main
	padding 0 0 310px
	background-color: #050505
	background-image: url(../img/backs/main.png)
	background-repeat: no-repeat
	background-position: center left 300px
	background-size: auto 100%
	color #fff
.main
	&-pre
		margin: 100px 0 20px
	&-title
		font-size: 34px
		font-weight: 600;
		text-transform uppercase
	&-subtitle
		font-size: 26px
		font-weight: 300
		margin 10px 0 70px
	&-img
		display none
		width 100%
		max-width 414px
		margin 0 auto
.form-desktop
	width 100%
	max-width 570px
.input
	background-color: transparent
	display inline-block
	border: 1px solid #A8A8A8;
	border-radius: 2px;
	color: #D0D0D0;;
	font-size: 18px;
	font-weight: normal;
	padding 7px 22px 11px
	transition: all .3s ease
	width 100%
	max-width 260px
	&-mail
		float left
		margin-right: 15px
		@media screen and (max-width 1200px)
			float: none
			display block
			margin 0 auto 10px 0
		@media screen and (max-width 991px)
			margin 0 auto 10px
	::-webkit-input-placeholder
	::-moz-placeholder
	:-moz-placeholder
	:-ms-input-placeholder
		color:#D0D0D0;
		opacity:1;
.button-form
	// float right
	@media screen and (min-width 2295px)
		width 100%
	@media screen and (max-width 1200px)
		display block
		float: none
		margin 0
		width 100%
	@media screen and (max-width 991px)
		margin 0 auto
@-webkit-keyframes autofill
	to
		font-size: 18px
		color: #D0D0D0;
		background-color: transparent
input:-webkit-autofill
	-webkit-animation-name: autofill;
	-webkit-animation-fill-mode: both;
.input:active
input:-internal-autofill-selected
	background-color: transparent !important
.alert-message
	clear both
	display: none;
	font-size: 16px;
	padding-top: 10px;
	color: #f00
	text-align: center
	font-weight: 600
	line-height: 1
.checking
	display: table;
	width 100%
	max-width 500px
	margin: 5px 0 0
	text-align: left
	&-main
		margin-left: 0
		@media screen and (max-width 991px)
			margin-left: auto
	@media screen and (max-width 560px)
		max-width 300px
@keyframes pulse
	0%
		box-shadow: 0 0 0 0 rgba(red, .42) inset
	100%
		box-shadow: 0 0 15px 10px rgba(red, .42) inset
.check-label
	line-height: 27px;
	cursor: pointer;
	position: relative;
	display: table-cell;
	vertical-align: middle;
	padding: 0 30px 0 0;
	text-align: left;
	font-size: 15px
	color #fff
	@media screen and (max-width 560px)
		line-height: 18px
.check-label a
	text-decoration: none
	text-decoration: underline
	display: inline
	color #fff
	&:focus
		color #fff
		text-decoration: underline
	&:hover
		text-decoration: none
		color #fff
		text-decoration none

.check-label:before
	content: '';
	background-color: transparent;
	position: absolute;
	right: 0;
	top: 3px;
	width: 20px;
	height: 20px;
	border 1px solid red
	border-radius: 0
	animation: pulse
	animation-duration: .7s
	animation-iteration-count: infinite
	animation-timing-function: ease-out;
.check-label:after
	content: '';
	position: absolute;
	right: 6px;
	top: -10px;
	width: 8px;
	height: 14px;
	background-color: transparent;
	opacity: 0;
	border-bottom: 2px solid #fff;
	border-right: 2px solid #fff;
	-webkit-transform: rotate(41deg);
	-ms-transform: rotate(41deg);
	transform: rotate(41deg);
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;
.check
	position: absolute;
	z-index: -1;
	opacity: 0;
	width: 0;
	height 0;
	border: 0;
	left -99999px;
.check:checked + .check-label:before
	background-color: transparent
	border-color: #fff
	animation: none
.check:checked + .check-label:after
	opacity: 1;
	top: 4px;
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;
.check-label-dark
	color #878787
	a
		color #878787
		&:focus
		&:hover
			color #878787
	&:after
		border-bottom: 2px solid #000;
		border-right: 2px solid #000;
.check:checked + .check-label-dark:before
	border-color: #000