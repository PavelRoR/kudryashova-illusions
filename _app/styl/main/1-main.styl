#main
	padding 0 0 310px
	background-color: #050505
	background-image: url(../img/backs/main.png)
	background-repeat: no-repeat
	background-position: center left 300px
	background-size: auto 100%
	color #fff
	@media screen and (min-width 1440px)
		background-position: center right
	@media screen and (max-width 1200px)
		background-position: center right -200px
	@media screen and (max-width 991px)
		padding 0 0 100px
	@media screen and (max-width 767px)
		padding 0 0 500px
		background-image: url(../img/backs/main-promo.png)
		background-position: bottom center
		background-size: auto 500px
	@media screen and (max-width 560px)
		background-image: url(../img/backs/main-mobile.png)
		background-position: bottom right
	@media screen and (max-width 385px)
		background-position: bottom center
.main
	&-pre
		margin: 50px 0 20px
		@media screen and (max-width 991px)
			margin 0 0 20px
		@media screen and (max-width 560px)
			font-size: 10px
			margin-bottom: 10px
	&-title
		font-size: 34px
		font-weight: 600;
		text-transform uppercase
		@media screen and (max-width 991px)
			font-size: 30px
		@media screen and (max-width 560px)
			font-size: 26px
	&-subtitle
		font-size: 28px
		font-weight: 300
		margin 10px 0 20px
		@media screen and (max-width 991px)
			font-size: 24px
		@media screen and (max-width 560px)
			font-size: 20px
			margin 10px 0
	&-info
		font-size: 20px
		margin-bottom: 10px
		span
			display inline-block
			font-weight: 500
			color: #e7d3be
		@media screen and (max-width 560px)
			font-size: 16px
			margin-bottom: 5px
		&:last-of-type
			margin-bottom: 70px
			@media screen and (max-width 991px)
				margin-bottom: 40px
			@media screen and (max-width 560px)
				margin-bottom: 20px
	&-img
		display none
		width 100%
		max-width 414px
		margin 0 auto
.form-desktop
	@media screen and (max-width 560px)
		display none
.form-desktop
	width 100%
	max-width 570px
.input
	background-color: transparent
	display inline-block
	border: 1px solid #A8A8A8;
	border-radius: 2px;
	color: #D0D0D0;;
	font-size: 18px;
	font-weight: normal;
	padding 7px 22px 11px
	transition: all .3s ease
	width 100%
	max-width 260px
	&-mail
		float left
		margin-right: 10px
		@media screen and (max-width 1200px)
			max-width 320px
			float: none
			display block
			margin 0 auto 10px 0
	::-webkit-input-placeholder
	::-moz-placeholder
	:-moz-placeholder
	:-ms-input-placeholder
		color:#D0D0D0;
		opacity:1;
.button-form
	@media screen and (max-width 1200px)
		width 100%
		min-width 1px
		max-width 320px
@-webkit-keyframes autofill
	to
		font-size: 18px
		color: #D0D0D0;
		background-color: transparent
input:-webkit-autofill
	-webkit-animation-name: autofill;
	-webkit-animation-fill-mode: both;
.input:active
input:-internal-autofill-selected
	background-color: transparent !important
.alert-message
	clear both
	display: none;
	font-size: 16px;
	padding-top: 10px;
	color: #f00
	text-align: center
	font-weight: 600
	line-height: 1
.checking
	display: table;
	width 100%
	max-width 510px
	margin: 5px 0 0
	text-align: left
	@media screen and (max-width 1200px)
		max-width 320px
@keyframes pulse
	0%
		box-shadow: 0 0 0 0 rgba(red, .42) inset
	100%
		box-shadow: 0 0 15px 10px rgba(red, .42) inset
.check-label
	line-height: 27px;
	cursor: pointer;
	position: relative;
	display: table-cell;
	vertical-align: middle;
	padding: 0 30px 0 0;
	text-align: left;
	font-size: 15px
	color #fff
	@media screen and (max-width 1200px)
		line-height: 18px
		padding: 0 0 0 30px;
.check-label a
	text-decoration: underline
	display: inline
	color #fff
	&:focus
		color #fff
		text-decoration: underline
	&:hover
		color #fff
		text-decoration none
.check-label:before
	content: '';
	background-color: transparent;
	position: absolute;
	right: 0;
	top: 3px;
	width: 20px;
	height: 20px;
	border 1px solid red
	border-radius: 0
	animation: pulse
	animation-duration: .7s
	animation-iteration-count: infinite
	animation-timing-function: ease-out;
	@media screen and (max-width 1200px)
		left 0
		right auto
.check-label:after
	content: '';
	position: absolute;
	right: 6px;
	top: -10px;
	width: 8px;
	height: 14px;
	background-color: transparent;
	opacity: 0;
	border-bottom: 2px solid #fff;
	border-right: 2px solid #fff;
	-webkit-transform: rotate(41deg);
	-ms-transform: rotate(41deg);
	transform: rotate(41deg);
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;
	@media screen and (max-width 1200px)
		left 6px
		right auto
.check
	position: absolute;
	z-index: -1;
	opacity: 0;
	width: 0;
	height 0;
	border: 0;
	left -99999px;
.check:checked + .check-label:before
	background-color: transparent
	border-color: #fff
	animation: none
.check:checked + .check-label:after
	opacity: 1;
	top: 4px;
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;
.check-label-dark
	color #878787
	a
		color #878787
		&:focus
		&:hover
			color #878787
	&:after
		border-bottom: 2px solid #000;
		border-right: 2px solid #000;
.check:checked + .check-label-dark:before
	border-color: #000
.button-mobile
	display none
	min-width 1px
	width 90%
	max-width 375px
	font-size: 24px
	position: fixed
	bottom: 10px
	left 0
	right 0
	margin 0 auto
	padding 10px 30px
	z-index 50
	@media screen and (max-width 560px)
		display block
	@media screen and (max-width 385px)
		font-size: 17px
		padding 10px 15px
		line-height: 1.3