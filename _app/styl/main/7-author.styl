	// background-repeat: no-repeat, no-repeat
	// background-position: bottom left 100px, bottom left
	// background-size contain, auto 93%
	// padding-left: 100px
.author-instagram
	position relative
	margin-top: 65px
	font-size: 24px
	&-text
		display inline-block
		margin-right: 8px
		text-transform uppercase
	&-link
		display inline-block
		font-weight: 600
		color #E0C3A6;
		transition: all .3s ease
		&:focus
			color #E0C3A6;
		&:hover
			color #B3906E;
	@media screen and (max-width 560px)
		font-size: 14px
		margin-top: 20px
.author-tv
	&-title
		margin: 80px 0 50px
		font-size: 24px
		font-weight: 300
		color #727272
		@media screen and (max-width 991px)
			margin 70px 0 0
	&-img
		display block
		margin 0 auto
		width 100%
		max-width 430px
		@media screen and (max-width 991px)
			margin-top: 30px