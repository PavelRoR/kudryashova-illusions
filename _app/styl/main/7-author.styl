#author
	padding 130px 0
	@media screen and (max-width 991px)
		padding 60px 0
	@media screen and (max-width 385px)
		padding 40px 0
.author-pre-title
	font-size: 24px
	color #727272;
	margin-bottom: 15px
	@media screen and (max-width 385px)
		font-size: 14px
		color #858585;
		margin-bottom: 5px
.author-slider
	width 200%
	position relative
	left 50px
	background-image: url(../img/backs/author.png)
	background-repeat: no-repeat
	background-position: bottom left
	background-size auto 93%
	@media screen and (max-width 991px)
		width 100%
		margin-top: 100px
		background-size: 100% 87%
		left 0
	@media screen and (max-width 560px)
		margin-top: 50px
	.slick-list
		padding-left: 100px
		@media screen and (max-width 1200px)
			padding-left: 50px
		@media screen and (max-width 991px)
			padding-left: 0
	&-img
		@media screen and (max-width 991px)
			display block
			margin 0 auto
			width 90%
			max-width 404px
		// @media screen and (max-width 420px)
		// 	width 90%
