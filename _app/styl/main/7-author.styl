#author
	padding 130px 0
	@media screen and (max-width 991px)
		padding 60px 0
	@media screen and (max-width 385px)
		padding 40px 0
.author-pre-title
	font-size: 24px
	color #727272;
	margin-bottom: 15px
	@media screen and (max-width 385px)
		font-size: 14px
		color #858585;
		margin-bottom: 5px
.author-slider
	position relative
	width 750px
	&-mask
		display block
		margin 0 auto
		position absolute
		top: 0
		left 0
		width 100%
		height 100%
	@media screen and (max-width 1199px)
		left -30px
		width 600px
		margin-top: 50px
	@media screen and (max-width 991px)
		margin 50px auto 0
		left 0
		width 100%
		max-width 600px
.author-slides
	width 100%
	position relative
	&-img
		display block
		margin 0 auto
		width 100%
		max-width 750px
.author-instagram
	position relative
	margin-top: 65px
	font-size: 24px
	&-text
		display inline-block
		margin-right: 8px
		text-transform uppercase
	&-link
		display inline-block
		font-weight: 600
		color #E0C3A6;
		transition: all .3s ease
		&:focus
			color #E0C3A6;
		&:hover
			color #B3906E;
	@media screen and (max-width 560px)
		font-size: 14px
		margin-top: 20px
.author-tv
	&-title
		margin: 80px 0 50px
		font-size: 24px
		font-weight: 300
		color #727272
		@media screen and (max-width 991px)
			margin 70px 0 0
	&-img
		display block
		margin 0 auto
		width 100%
		max-width 430px
		@media screen and (max-width 991px)
			margin-top: 30px