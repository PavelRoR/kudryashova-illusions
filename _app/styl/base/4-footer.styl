footer
	padding 45px 0
	background-color: #2E2E2E
	color: #fff
	@media screen and (max-width: 767px)
		padding: 30px 0;
		text-align: center;
.footer-menu
	margin-bottom: 50px
	li
		list-style: none
		margin-bottom: 20px
		&:last-child
			margin-bottom: 0
		a
			color: #fff
			font-size: 14px
			transition: all .3s ease
			&:hover
				text-decoration underline
		&:first-child
			display block
			float left
			margin-right: 50px
			a
				padding 23px 30px
				border-radius: 2px
				border: 1px solid #fff
				display block
				width 100%
				height 100%
				text-align center
				width 186px
				&:hover
					text-decoration none
					background-color: #3A38DC;
					border-color: #3A38DC;
	@media screen and (max-width: 991px)
		margin-top: 100px
	@media screen and (max-width: 767px)
		margin: 30px 0;
		li:first-child
			float: none
			margin: 0 0 20px;
			a
				margin: 0 auto;
.footer-text
	margin-bottom: 15px
	&:last-of-type
		margin-bottom: 0
	a
		color: #fff
		&:focus
			color #fff
		&:hover
			color #fff
			text-decoration underline
	&-copy
		text-align right
		@media screen and (max-width 767px)
			text-align: center;
			margin-top: 15px
	@media screen and (max-width 560px)
		font-size: 12px
		margin-bottom: 10px
.footer-hr
	border-top-color: #fff
	margin: 50px 0
	@media screen and (max-width 767px)
		margin: 30px 0;
@media screen and (max-width 560px)
	.footer-logo
		height: 40px