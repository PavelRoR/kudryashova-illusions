#get
	padding 40px 0 80px
	background-color: #050505
	@media screen and (max-width 991px)
		padding 40px 0 60px
	.col-md-6
		position relative
.get
	&-img
		width 90%
		margin-top: 100px
		max-width 597px
		@media screen and (max-width 991px)
			display block
			width 100%
			max-width 414px
			margin 30px auto 0
	&-list
		margin-bottom: 50px
		counter-reset my-list
		li
			list-style none
			counter-increment: my-list
			position relative
			font-size: 24px
			margin-bottom: 30px
			overflow hidden
			color #fff
			&:last-child
				margin-bottom: 0
			&:before
				content: counter(my-list)'.'
				display inline-block
				margin-right: 15px
				font-size: 30px
				font-weight: 500
				color: #E3CDB5
				float left
				position relative
				top -6px
		&-2
			counter-reset my-list 10
		@media screen and (max-width 560px)
			margin-bottom 35px
			li
				font-size 18px
				margin-bottom 20px
				&:before
					font-size 26px
					margin-right 10px
					top -10px
					height 100px
	&-sublist
		overflow hidden
		li
			padding-left: 33px;
			font-size: 20px;
			margin 10px 0 0 30px;
			&:before
				content: '';
				display: block;
				position: absolute;
				width: 20px;
				height: 3px;
				background-color: #9d7d5c;
				top: 14px;
				left: 0;
				float: none
			@media screen and (max-width 560px)
				font-size 16px
				margin 10px 0
				padding-left 20px
				&:before
					width 14px
					top 12px