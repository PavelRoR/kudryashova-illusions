#main
	padding 0 0 310px
	background-color: #050505
	background-image: url(../img/backs/main.png)
	background-repeat: no-repeat
	background-position: center left 300px
	background-size: auto 100%
	color #fff
	@media screen and (min-width 1440px)
		background-position: center right
	@media screen and (max-width 1200px)
		background-position: center right -200px
	@media screen and (max-width 991px)
		padding 0 0 100px
	@media screen and (max-width 767px)
		padding 0 0 500px
		background-image: url(../img/backs/main-promo.png)
		background-position: bottom center
		background-size: auto 500px
	@media screen and (max-width 560px)
		background-image: url(../img/backs/main-mobile.png)
		background-position: bottom right
	@media screen and (max-width 385px)
		background-position: bottom center
.main
	// &-pre-0
	// 	margin: 50px 0 20px
	// 	font-size: 14px
	&-pre
		margin: 50px 0 20px
		@media screen and (max-width 991px)
			margin 0 0 20px
		@media screen and (max-width 560px)
			font-size: 10px
			margin-bottom: 10px
	&-title
		font-size: 44px
		font-weight: 600;
		text-transform uppercase
		margin 10px 0 30px
		@media screen and (max-width 991px)
			font-size: 40px
		@media screen and (max-width 560px)
			font-size: 36px
			margin 10px 0
	&-info
		font-size: 22px
		margin-bottom: 10px
		span
			display inline-block
			font-weight: 500
			color: #e7d3be
		@media screen and (max-width 560px)
			font-size: 18px
			margin-bottom: 5px
		&:last-of-type
			margin-bottom: 50px
			@media screen and (max-width 991px)
				margin-bottom: 35px
			@media screen and (max-width 560px)
				margin-bottom: 20px