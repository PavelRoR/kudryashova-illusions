#prices
	padding 40px 0 80px
	@media screen and (max-width 560px)
		padding 40px 0
.packet
	width 100%
	max-width 420px
	margin 0 auto 30px
	padding 50px 30px
	transition: all .3s ease
	border-radius: 2px
	border 1px solid #050505
	&:hover
		color: #fff
		background-color: #050505
	@media screen and (max-width 560px)
		padding 30px 20px
	&-head
		&-title
			text-align center
			font-size: 32px
			font-weight: 600
			text-transform uppercase
			color: #d4ad85
			small
				display block
				font-size: 16px
				font-weight: 300
				color: #727272
				text-transform none
			@media screen and (max-width 560px)
				font-size 26px
	&-body
		padding 20px 0
		min-height 420px
		@media screen and (max-width 991px)
			min-height 1px
		&-list
			li
				font-size: 20px
				margin-bottom: 20px
				position relative
				padding-left: 20px
				list-style: none
				&:before
					content: ''
					display block
					position absolute
					top 11px
					left 0
					border-radius: 50px
					width 10px
					height: 10px
					background-color: #d4ad85
			@media screen and (max-width 560px)
				li
					font-size 18px
					padding-left 20px
					margin-bottom 10px
					&:before
						width 10px
						height 10px
						top 10px
.cost
	text-align center
	font-size: 24px
	text-transform uppercase
	// font-weight: 500
	margin-bottom: 20px
	line-height: 1.4
	span
		display block
		font-size: 48px
		font-weight: 600
	@media screen and (max-width 560px)
		font-size 20px
		line-height 1.2
		span
			font-size 36px
	&-full
		span
			text-decoration line-through
			&.unbroken
				text-decoration none
	&-sale
		color red
	&-today
		color limegreen
.prepayment
	text-align center
	margin-bottom: 80px
	&-title
		font-size: 36px
		font-weight: 600
		text-transform uppercase
		color red
	&-text
		font-size: 20px
		margin 10px 0 20px
	@media screen and (max-width 560px)
		margin-bottom 40px
		&-title
			font-size 28px
		&-text
			font-size 16px
			margin 10px 0 15px
.timer-title
	font-size: 36px
	font-weight: 600
	text-transform uppercase
	line-height: 1.2
	text-align center
	color red
	@media screen and (max-width 560px)
		font-size 28px
.flip-clock-wrapper
	width: 100%
	max-width 460px
.flip-clock-divider .flip-clock-label
	color #050505
.flip-clock-dot
	background-color: #050505
.flip-clock-wrapper ul li a div div.inn
	color: #fff
	background-color: #050505
	text-shadow: none
	border-radius: 2px
.flip-clock-wrapper ul li a div.down
	border-bottom-left-radius: 2px
	border-bottom-right-radius: 2px
.flip-clock-wrapper .flip
	box-shadow: none
@media screen and (max-width 560px)
	.flip-clock-wrapper
		width 100%
		max-width 260px
		margin-top: 20px
	.flip-clock-wrapper ul
		height 50px
		margin 3px
	.flip-clock-wrapper ul li
		line-height: 50px
	.flip-clock-wrapper ul li a div.up::after
		top 24px
	.flip-clock-wrapper ul li a div div.inn
		font-size: 40px
	.flip-clock-divider
		height 50px
	.flip-clock-dot
		width 7px
		height 7px
		left 3px
	.flip-clock-dot.top
		top 31px
	.flip-clock-dot.bottom
		bottom: 27px
	.flip-clock-divider .flip-clock-label
	.flip-clock-divider.minutes .flip-clock-label
	.flip-clock-divider.seconds .flip-clock-label
		font-size:  10px
		right: -59px