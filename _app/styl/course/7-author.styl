#author
	padding 130px 0 60px
	@media screen and (max-width 991px)
		padding 60px 0 30px
	@media screen and (max-width 385px)
		padding 40px 0 20px
.author-pre-title
	font-size: 24px
	color #727272;
	margin-bottom: 15px
	span
		display block
		font-size 28px
		font-weight 500
		margin-bottom 20px
	@media screen and (max-width 560px)
		font-size: 18px
		color #858585;
		margin-bottom: 5px
		span
			font-size 22px
.author-slider
	position relative
	width 750px
	&-mask
		display block
		margin 0 auto
		position absolute
		top: 0
		left 0
		width 100%
		height 100%
	@media screen and (max-width 1199px)
		left -30px
		width 600px
		margin-top: 50px
	@media screen and (max-width 991px)
		margin 50px auto 0
		left 0
		width 100%
		max-width 600px
.author-slides
	width 100%
	position relative
	&-img
		display block
		margin 0 auto
		width 100%
		max-width 750px
.author-instagram
	position relative
	margin-top: 65px
	font-size: 24px
	&-text
		display inline-block
		margin-right: 8px
		text-transform uppercase
	&-link
		display inline-block
		font-weight: 600
		color #E0C3A6;
		transition: all .3s ease
		&:focus
			color #E0C3A6;
		&:hover
			color #B3906E;
	@media screen and (max-width 560px)
		font-size: 14px
		margin-top: 20px
.author-tv
	&-title
		margin: 80px 0 50px
		font-size: 24px
		font-weight: 300
		color #727272
		@media screen and (max-width 991px)
			margin 70px 0 0
		@media screen and (max-width 560px)
			font-size 18px
			margin 50px 0 0
	&-img
		display block
		margin 0 auto
		width 100%
		max-width 430px
		@media screen and (max-width 991px)
			margin-top: 30px
#revs
	padding 0 0 20px
	@media screen and (max-width 385px)
		padding 0 0 40px
	.container
		position relative
.general-title-revs-2
	margin-top 60px
.video-wrapper-rev
	transform: scale(.9)
	transition: all .3s ease
	padding 20px
	overflow hidden
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
		height auto
	@media screen and (max-width 991px)
		max-width 560px
.video-wrapper-rev-back
.text-rev-link
	position relative
	z-index 50
	&:before
		content: ''
		display block
		width 90%
		height 100%
		background-color transparent
		top 20px
		right 10px
		position absolute
		border: 1px solid #e7d3be
		@media screen and (max-width 1199px)
			right 3px
.video-wrapper-rev-back
	@media screen and (max-width 991px)
		max-width 560px
		margin 0 auto
	&:before
		top 40px
		height 88%
		@media screen and (min-width 1400px)
			height 86%
			right 5px
		@media screen and (min-width 2295px)
			height 90%
		@media screen and (max-width 1199px)
			height 90%
		@media screen and (max-width 991px)
			// top 20px
			height 90%
		@media screen and (max-width 767px)
			height 90%
			top 40px
			right 15px
		@media screen and (max-width 560px)
			top: 25px;
			right: 5px;
			height 92%
		@media screen and (max-width 385px)
			top: 16px;
			right: 3px;
.text-rev-link
	padding 20px
	transition: all .3s ease
	&:before
		width 84%
		height 89%
		top 35px
		right 10px
		@media screen and (min-width 1900px)
			width 87%
		@media screen and (max-width 1199px)
			width: 87%
		@media screen and (max-width 991px)
			width 85%
		@media screen and (max-width 767px)
			width 81%
		@media screen and (max-width 560px)
			width 90%
			height 90%
			top 30px
			right 10px
		@media screen and (max-width 480px)
			width: 88%
		@media screen and (max-width 385px)
			width 85%
			height 90%
.revs-slider-text.slick-dotted.slick-slider
	width 100%
	max-width 1920px
	margin 0 auto 180px
	position relative
	z-index 10
	@media screen and (max-width 991px)
		margin-top: 40px
	@media screen and (max-width 560px)
		margin-bottom: 90px
	@media screen and (max-width 385px)
		margin-bottom: 60px
	.slick-track
		padding: 20px 0
	.slick-center
		transform scale(1.08)
	.slick-arrow
		height 0
		width 0
		top auto
		bottom: -90px
	.slick-prev
	.slick-next
		&:before
			width 100%
			height 100%
			border-radius: 50px
			display block
			line-height: 46px
			background-color: #e7d3be
			text-align center
			color #fff
			font-size: 24px
			opacity 1
			transition: all .3s ease
			border: 1px solid #e7d3be
			font-weight: 800
		&:hover
			&:before
				background-color: transparent
				color #e7d3be
		left 43%
	.slick-next
		left auto
		right 43%
.slick-dots
	left 0
	text-align left
	bottom: -60px
	li
		width 20px
		height 20px
		border-radius: 50px
		border: 1px solid #e7d3be;
		transition: all .3s ease
		margin 0 10px
		overflow hidden
		@media screen and (max-width 560px)
			width 15px
			height 15px
			margin 0 5px
		button
			transition: all .3s ease
			width 100%
			height 100%
			background-color: transparent
			padding 0
			&:before
				content: none
		&.slick-active
			button
				background-color: #e7d3be;
	@media screen and (max-width 560px)
		height 200px
		width 80%
		top 0
		left: 35px
.text-rev-img
	position relative
	width 100%
	display block
	margin 0 auto
	background: #fff;
	border: 1px solid #000
	object-fit: contain
	object-position: center
	height 350px
	background-color: #fff
	@media screen and (max-width 560px)
		height 350px
		// object-fit cover
		object-position: center
.arrows
	position absolute
	width 110px
	top 85px
	left 300px
	z-index 300
	@media screen and (max-width 991px)
		top auto
		bottom: 0
		left 35px
	@media screen and (max-width 991px)
		bottom: -10px
.slick-next, .slick-prev
	width 60px
	height 60px
.slick-next:before
.slick-prev:before
	color: #e7d3be
	font-size: 60px
	font-weight: 800
	transition: all .3s ease
	opacity 1
.slick-next:hover:before
.slick-prev:hover:before
	color: #d5ad85