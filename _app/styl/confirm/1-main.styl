#main
	padding 0 0 100px
	min-height calc(100vh - 570px)
	@media screen and (max-width 767px)
		text-align center
	@media screen and (max-width 385px)
		padding 0 0 30px
.main
	&-title
		font-size: 42px
		font-weight: 600
		line-height: 140%
		text-transform uppercase
		span
			color #D5AD85
			display inline-block
		@media screen and (max-width 767px)
			font-size: 32px
		@media screen and (max-width 560px)
			font-size: 28px
		@media screen and (max-width 385px)
			font-size: 22px
	&-subtitle
		font-size: 24px
		font-weight: 500
		margin-top: 30px
		span
			color #D5AD85
		@media screen and (max-width 560px)
			font-size: 22px
	&-text
		font-size: 24px
		margin: 50px 0 30px
		@media screen and (max-width 767px)
			font-size: 20px
			margin 30px 0 20px
		@media screen and (max-width 385px)
			margin 10px 0 15px
.post-link
	display inline-block
	margin-right: 30px
	transition: all .3s ease-out
	&:last-child
		margin-right: 0
	&:hover
		transform: translateY(-8px)
	@media screen and (max-width 560px)
		margin-right: 15px
	@media screen and (max-width 385px)
		margin-right: 10px
.post-icon
	display block
	width 100%
	max-width 83px
	margin 0 auto
	@media screen and (max-width 560px)
		max-width 65px
	@media screen and (max-width 385px)
		max-width 45px